<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/phone_list_item"
    >

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:contentPadding="12dp"
    app:contentPaddingBottom="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/background_secondary"
    app:layout_constraintTop_toTopOf="parent"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/phone_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Huawei Mate 50 Pro"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/foreground_primary"
            android:textSize="24sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/phone_list_item_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Launch price:"
                android:textColor="@color/foreground_secondary"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/phone_list_item_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1299"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="@color/foreground_primary"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/phone_list_item_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Launch Date:"
                android:textColor="@color/foreground_secondary"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/phone_list_item_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep, 2022"
                android:layout_marginStart="8dp"
                android:textColor="@color/foreground_primary"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/phone_list_item_score_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera Score:"
                android:textColor="@color/foreground_secondary"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/phone_list_item_score_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="149"
                android:layout_marginStart="8dp"
                android:textColor="@color/foreground_primary"
                android:textSize="18sp"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>